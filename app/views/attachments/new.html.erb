<% if !@attachment.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @attachment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>
<div class="container" style="margin-top: 70px;">
   <div class = "well" style="width: 400px; margin:0px auto;">
      <%= form_for @attachment, html: { multipart: true } do |f| %>
         <div class="form-group">
            <%= f.label :attachment_name %>
            <%= f.text_field :attachment_name, class: 'form-control'%>
         </div>
         <div class="form-group">
            <%= f.label :attach_file %>
            <%= f.file_field :attach_file, accept: "text/plain", class: 'form-control' %>
         </div>
         <div class="form-group">
            <%= f.label :project %>
            <%= collection_select(:projects, :id, Project.where(user_id: current_user.id), :id, :title, {:multiple => true}, class: 'form-control')%>
         </div>
  
            <%= f.submit "Save", class: "btn btn-primary form-control text-white" %>
      <% end %>
   </div>
</div>
