<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center">Log in</h2>       
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@email.com" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    </div>
    <div class="form-group">
      <%= f.submit "Log in", class: "btn btn-primary btn-block"%>
    </div>
    <div class="clearfix">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "pull-left checkbox-inline" %>
      <% end -%>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "pull-right" %><br />
      <% end -%>
    </div>
  <% end %>
  <p class="text-center">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Create Account", new_registration_path(resource_name) %><br />
    <% end -%>
  </p>    
</div>