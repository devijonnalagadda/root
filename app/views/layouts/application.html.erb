<!DOCTYPE html>
<html>
  <head>
    <title>Root</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-sm bg-dark justify-content-left">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Project Management System</a>
      </div>
      <ul class="navbar-nav">
        <li class="nav-item marg" >
          <%= link_to 'Home',root_path, class: "text-white" %>
        </li>
        <li class="nav-item marg" >
          <%= link_to 'Organisations',organizations_path, class: "text-white" %>
        </li>
        <li class="nav-item marg" >
          <%= link_to 'Projects',projects_path, class: "text-white" %>
        </li>
        <li class="nav-item marg" >
          <%= link_to 'Tasks',tasks_path, class: "text-white" %>
        </li>
        <li class="nav-item marg" >
          <%= link_to 'Attachments',attachments_path, class: "text-white" %>
        </li>

        <% if current_user %>

          <li class="nav-item marg">
            <%= link_to 'Edit Profile',edit_user_registration_path, class: "text-white" %>
          </li>
          <li class="nav-item marg">
            <%= link_to 'Sign Out',destroy_user_session_path, method: :delete %>
          </li>
          
        <% else %>

          <li class="nav-item marg">
            <%= link_to 'Register',new_user_registration_path, class: "text-white" %>
          </li>
          <li class="nav-item marg">
            <%= link_to 'Sign In',new_user_session_path, class: "text-white" %>
          </li>

        <% end %>
        
      </ul>
    </nav>    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
        <%= yield %>
    
  </body>
</html>
