<!DOCTYPE html>
<html>
  <head>
    <title>Root</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#" style="color: blue;">Project Management System</a>
      
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Home',root_path, class: "nav-link text-white" %>
          </li>
          <% if current_admin %>
            <li class="nav-item">
              <%= link_to 'Organisations',organizations_path, class: "nav-link text-white" %>
            </li>
          <% end -%>
          <% if current_user %>
            <li class="nav-item">
              <%= link_to 'Projects',projects_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Tasks',tasks_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Attachments',attachments_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Edit Profile',edit_user_registration_path, class: "nav-link text-white" %>
            </li>
          <% end %>
        </ul>
        <% if current_user %>
          <span class="navbar-text">
            <%= link_to 'Sign Out',destroy_user_session_path, method: :delete, class: "text-white" %>
          </span>
        <% else %>
            <span class="navbar-text">
            <%= link_to 'Register',new_user_registration_path %>
            <%= link_to 'Sign In',new_user_session_path %>
          </span>
        <% end %>
      </div>
    </nav>
     
    <div align="center">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>    
    </div>
    
    <%= yield %>
    
  </body>
</html>

