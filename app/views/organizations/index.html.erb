<div class="container" style="margin-top: 30px;">
  <h1 align="center">Organizations</h1>

  <table class="table table-stripped">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @organizations.each do |organization| %>
        <tr>
          <td><%= organization.name %></td>

          <td><%= link_to 'Show', organization %></td>
        
          <td><%= link_to 'Edit', edit_organization_path(organization), :class => 'btn btn-mini' %></td>
          <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?'}, :class => 'btn btn-mini btn-danger'  %></td>
        
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Organization', new_organization_path, :class => 'btn btn-primary' %>
</div>